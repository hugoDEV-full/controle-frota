<div class="container py-4">
    <h1 class="mb-4">Logs de Auditoria</h1>
    <form method="GET" class="row g-3 mb-4">
      
      <div class="col-md-3">
        <input type="text" class="form-control" name="usuario" placeholder="Usuário" value="<%= filtro?.usuario || '' %>">
      </div>
      <div class="col-md-2">
        <input type="date" class="form-control" name="data" value="<%= filtro?.data || '' %>">
      </div>
      <div class="col-md-3">
        <input type="text" class="form-control" name="rota" placeholder="Rota" value="<%= filtro?.rota || '' %>">
      </div>
      <div class="col-md-2">
        <select class="form-select" name="metodo">
          <option value="">Método</option>
          <% ['GET', 'POST', 'PUT', 'PATCH', 'DELETE', 'LOGIN', 'LOGOUT'].forEach(m => { %>
            <option value="<%= m %>" <%= filtro?.metodo === m ? 'selected' : '' %>><%= m %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
      </div>
    </form>
    
    <div class="table-responsive">
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>Usuário</th>
            <th>Rota</th>
            <th>Método</th>
            <th>Data/Hora</th>
            <th>Detalhes</th>
          </tr>
        </thead>
        <tbody>
          <% logs.forEach(log => { %>
            <tr>
              <td><%= log.usuario %></td>
              <td><%= log.rota %></td>
              <td>
                <% if (log.metodo === 'GET') { %>
                  <span class="badge bg-info">Visualização</span>
                <% } else if (log.metodo === 'POST') { %>
                  <span class="badge bg-success">Criação</span>
                <% } else if (log.metodo === 'PUT' || log.metodo === 'PATCH') { %>
                  <span class="badge bg-warning text-dark">Edição</span>
                <% } else if (log.metodo === 'DELETE') { %>
                  <span class="badge bg-danger">Exclusão</span>
                <% } else if (log.metodo === 'LOGIN') { %>
                  <span class="badge bg-primary">Login</span>
                <% } else if (log.metodo === 'LOGOUT') { %>
                  <span class="badge bg-secondary">Logout</span>
                <% } else { %>
                  <span class="badge bg-dark"><%= log.metodo %></span>
                <% } %>
              </td>
              <td><%= log.criado_em.toLocaleString() %></td>
              <td style="max-width:300px; overflow:auto;"><%= log.detalhes %></td>
              
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  