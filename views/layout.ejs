<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Controle de Frota' %></title>

  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Layout básico */
    body {
      margin: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .container-wrapper {
      display: flex;
      flex: 1;
      overflow: hidden;
    }
    /* Sidebar fixa */
    .sidebar {
      background-color: #f8f9fa;
      border-right: 1px solid #dee2e6;
      transition: width 0.3s;
      overflow: hidden;
      width: 250px;
    }
    /* Estado colapsado: largura menor e apenas ícones */
    .sidebar.collapsed {
      width: 80px;
    }
    .sidebar ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .sidebar li {
      border-bottom: 1px solid #dee2e6;
    }
    .sidebar a {
      display: flex;
      align-items: center;
      padding: 15px;
      color: #4c4d4e;
      text-decoration: none;
      transition: background-color 0.2s, color 0.2s;
    }
    .sidebar a:hover,
    .sidebar a.active {
      background-color: #495057;
      color: #fff;
    }
    /* Ícone sempre visível e texto que some quando colapsado */
    .sidebar i {
      font-size: 1.5rem;
      margin-right: 10px;
      min-width: 30px;
      text-align: center;
    }
    .sidebar.collapsed a span.menu-text {
      display: none;
    }
    /* Conteúdo principal */
    main {
      flex: 1;
      padding: 1rem;
      overflow-y: auto;
    }
    /* Navbar */
    .navbar {
      flex-shrink: 0;
    }
    /* Rodapé */
    footer {
      background-color: #f8f9fa;
      padding: 1rem 0;
      text-align: center;
      border-top: 1px solid #dee2e6;
      flex-shrink: 0;
    }

    #scrollBtn {
  position: fixed;
  bottom: 20px;
  right: 20px;
  display: none;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  font-size: 24px;
  text-align: center;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <!-- Botão de toggle para a sidebar -->
      <button id="toggleSidebar" class="btn btn-dark me-2" type="button">
        <i class="bi bi-list" style="font-size: 1.5rem;"></i>
      </button>
      <span class="navbar-brand mb-0 h1"></span>
      <div>
        <a href="/notificacoes" class="btn btn-primary me-2">Notificações</a>
        <a href="/logout" class="btn btn-primary">Sair</a>
      </div>
    </div>
  </nav>

  <!-- Container com Sidebar e Conteúdo -->
  <div class="container-wrapper">
    <!-- Sidebar fixa -->
    <aside id="sidebar" class="sidebar collapsed">
      <ul class="nav flex-column">
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Dashboard">
          <a class="nav-link <%= (activePage === 'dashboard' ? 'active' : '') %>" href="/">
            <i class="bi bi-speedometer2"></i>
            <span class="menu-text">Dashboard</span>
          </a>
        </li>
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Relatório de Uso">
          <a class="nav-link <%= (activePage === 'uso' ? 'active' : '') %>" href="/relatorio-uso">
            <i class="bi bi-bar-chart"></i>
            <span class="menu-text">Rel. de Uso</span>
          </a>
        </li>
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Relatório de Multas">
          <a class="nav-link <%= (activePage === 'multas' ? 'active' : '') %>" href="/relatorio-multas">
            <i class="bi bi-file-earmark-text"></i>
            <span class="menu-text">Rel. de Multas</span>
          </a>
        </li>
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Registro de Motorista">
          <a class="nav-link <%= (activePage === 'motorista' ? 'active' : '') %>" href="/registro-motorista">
            <i class="bi bi-person-plus"></i>
            <span class="menu-text">Reg. de Motorista</span>
          </a>
        </li>

        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Manutenções">
          <a class="nav-link <%= (activePage === 'manutencoes' ? 'active' : '') %>" href="/manutencoes">
            <i class="bi bi-tools"></i>
            <span class="menu-text">Manutenções</span>
          </a>
        </li>

        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Reembolsos">
          <a class="nav-link <%= (activePage === 'reembolsos' ? 'active' : '') %>" href="/reembolsos">
            <i class="bi bi-cash-stack"></i>
            <span class="menu-text">Reembolsos</span>
          </a>
        </li>
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Relatório de Consumo">
          <a class="nav-link <%= (activePage === 'relatorioConsumo' ? 'active' : '') %>" href="/relatorio-consumo">
            <i class="bi bi-speedometer2"></i>
            <span class="menu-text">Relatório Consumo</span>
          </a>
        </li>
        
        
        
        
      </ul>
    </aside>

    <!-- Conteúdo Principal -->
    <main>
      <!-- cada página será injetado aqui -->
      <%- body %>
    </main>
    <!-- Botão de Scroll -->
<button id="scrollBtn" class="btn btn-primary">
  <i id="scrollIcon" class="bi bi-chevron-expand"></i>

</button>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const scrollBtn = document.getElementById("scrollBtn");

    window.addEventListener("scroll", function () {
      if (window.scrollY > 100) {
        scrollBtn.style.display = "block";
      } else {
        scrollBtn.style.display = "none";
      }
    });

    scrollBtn.addEventListener("click", function () {
      if (window.scrollY > window.innerHeight / 2) {
        window.scrollTo({ top: 0, behavior: "smooth" }); // Sobe rápido
      } else {
        window.scrollTo({ top: document.body.scrollHeight, behavior: "smooth" }); // Desce rápido
      }
    });
  });
</script>
  </div>

  <!-- Rodapé -->
  <footer>
    <div class="container">
      <span>&copy; 2025 Controle de Frota. Todos os direitos reservados.</span>
    </div>
  </footer>
  
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Inicializa os tooltips
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    [...tooltipTriggerList].forEach(el => new bootstrap.Tooltip(el));
    
    // Toggle da sidebar
    const toggleSidebar = document.getElementById('toggleSidebar');
    const sidebar = document.getElementById('sidebar');

    toggleSidebar.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
    });
  </script>
</body>
</html>
