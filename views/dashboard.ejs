      height: 500px;
      border-radius: 10px;
      margin-top: 20px;
    }

    /* Estiliza√ß√£o do menu lateral */
    #vehicle-menu {
      position: absolute;
      top: 50px;
      right: 10px;
      background: rgba(255, 255, 255, 0.9);
      padding: 10px;
      width: 200px;
      max-height: 400px;
      overflow-y: auto;
      border-radius: 5px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
    }

    #vehicle-menu h4 {
      margin-top: 0;
    }

    .vehicle-item {
      padding: 5px;
      border-bottom: 1px solid #ccc;
      cursor: pointer;
    }

    .vehicle-item:hover {
      background: #f0f0f0;
    }

    /* Cart√µes com altura fixa */
    .standard-card {
      border-radius: 0.5rem;
      height: 200px;
      overflow: hidden;
    }

    .standard-card .card-header {
      background-color: rgba(0, 0, 0, 0.05);
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
    }

    .standard-card .card-body {
      padding: 1rem;
      height: calc(200px - 3rem);
      /* Altura total menos o header */
      overflow-y: auto;
    }
  </style>
</head>

<body>
