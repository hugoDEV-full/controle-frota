<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  // Inicializa o mapa centralizado em Sobradinho
  var map = L.map('map').setView([-15.6500, -47.6100], 12);

  // Adiciona um mapa base do OpenStreetMap
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  // √çcone personalizado do ve√≠culo
  var carIcon = L.icon({
    iconUrl: 'https://cdn-icons-png.flaticon.com/512/252/252025.png', // √çcone de carro
    iconSize: [40, 40],
    iconAnchor: [20, 20]
  });

  // Marca inicial do ve√≠culo 
  var vehicleMarker = L.marker([-15.6500, -47.6100], { icon: carIcon }).addTo(map)
    .bindPopup("üöó Ve√≠culo em movimento").openPopup();

  // Coordenadas simuladas para o trajeto de Sobradinho at√© Ceil√¢ndia
  var positions = [
    [-15.6500, -47.6100], // Sobradinho
    [-15.7000, -47.6500],
    [-15.7500, -47.7000],
    [-15.8000, -47.7500],
    [-15.8500, -47.8000],
    [-15.8600, -48.0000], // Ceil√¢ndia
  ];

  var index = 0;

  function moveVehicle() {
    if (index < positions.length) {
      vehicleMarker.setLatLng(positions[index]); // Atualiza posi√ß√£o do marcador
      map.panTo(positions[index]); // Centraliza no ve√≠culo
      index++;
    } else {
      clearInterval(interval); // Para a simula√ß√£o ao chegar no destino
    }
  }

  var interval = setInterval(moveVehicle, 2000); // Atualiza a cada 2 segundos
</script>



<script>
  function updateDateTime() {
    const now = new Date();
    const options = {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit'
    };
    document.getElementById('datetime').innerText = now.toLocaleDateString('pt-BR', options);
  }

  // Atualiza a cada segundo
  setInterval(updateDateTime, 1000);
  updateDateTime();
</script>