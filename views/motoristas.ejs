<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Motoristas</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <style>
    /* Garante scroll horizontal e evita quebra de célula */
    .table-responsive { overflow-x: auto; }
    .table-nowrap th, .table-nowrap td { white-space: nowrap; }
  </style>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2>Motoristas Cadastrados</h2>
    <a href="/" class="btn btn-secondary mb-3">&larr; Voltar</a>

    <div class="table-responsive">
      <table class="table table-striped table-nowrap">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>CPF</th>
            <th>CNH</th>
            <th>Validade</th>
            <th>Categoria</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% motoristas.forEach(m => { %>
            <tr>
              <td><%= m.id %></td>
              <td><%= m.nome %></td>
              <td><%= m.email %></td>
              <td><%= m.cpf %></td>
              <td><%= m.cnh %></td>
              <td><%= m.data_validade %></td>
              <td><%= m.categoria %></td>
              <td>
                <a href="/motoristas/<%= m.id %>/edit" class="btn btn-sm btn-primary">
                  Editar
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
