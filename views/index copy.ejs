<!DOCTYPE html>
<html lang="pt-br">
<head>
  <!-- Manifest -->
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#000000">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Controle de Frota - Dashboard</title>
  
  

  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Estilos customizados */
    body {
      overflow-x: hidden;
    }
    /* Offcanvas Header customizado */
    .offcanvas-header {
      background-color: #343a40;
      color: #fff;
    }
    .offcanvas-body .nav-link {
      color: #4c4d4e;
      transition: background-color 0.2s, color 0.2s;
    }
    .offcanvas-body .nav-link:hover,
    .offcanvas-body .nav-link.active {
      color: #fff;
      background-color: #495057;
    }
    /* Ajuste de margem para o conteúdo quando o menu estiver fechado */
    main {
      padding-top: 1rem;
    }
  </style>
</head>
<body>
  <!-- Navbar com botão hamburguer para todos os tamanhos de tela -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <button class="btn btn-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
        <i class="bi bi-list" style="font-size: 1.5rem;"></i>
      </button>
      <span class="navbar-brand mb-0 h1">Controle de Frota</span>
      <div>
        <a href="/notificacoes" class="btn btn-primary me-2">Notificações</a>
        <a href="/logout" class="btn btn-primary">Sair</a>
      </div>
    </div>
  </nav>

  <!-- Offcanvas (menu) para todas as telas -->
  <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
    </div>
    <div class="offcanvas-body">
      <ul class="nav flex-column">
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Dashboard">
          <a class="nav-link active" href="/">
            <i class="bi bi-speedometer2 me-2"></i> Dashboard
          </a>
        </li>
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Relatório de Uso">
          <a class="nav-link" href="/relatorio-uso">
            <i class="bi bi-bar-chart me-2"></i> Rel. de Uso
          </a>
        </li>
        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Relatório de Multas">
          <a class="nav-link" href="/relatorio-multas">
            <i class="bi bi-file-earmark-text me-2"></i> Rel. de Multas
          </a>
        </li>
      </ul>
    </div>
  </div>

  <!-- Conteúdo Principal -->
  <div class="container-fluid">
    <main class="px-md-4">
      <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div>
          <h1>Controle de Frota estte</h1>
          <p>
            Usuário: <strong><%= user.email %></strong> | Permissão: <strong><%= user.role %></strong>
          </p>
        </div>
      </div>

      <!-- Cards com estatísticas -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card stat-card text-white bg-primary mb-3">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-truck"></i> Veículos</h5>
              <p class="card-text display-6"><%= totalVeiculos || 0 %></p>
              <p class="card-text">Total de veículos cadastrados</p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stat-card text-white bg-danger mb-3">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-exclamation-octagon"></i> Multas</h5>
              <p class="card-text display-6"><%= totalMultas || 0 %></p>
              <p class="card-text">Multas registradas</p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stat-card text-white bg-success mb-3">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-speedometer2"></i> Uso</h5>
              <p class="card-text display-6"><%= totalUso || 0 %></p>
              <p class="card-text">Registros de uso</p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card stat-card text-white bg-warning mb-3">
            <div class="card-body">
              <h5 class="card-title"><i class="bi bi-people"></i> Motoristas</h5>
              <p class="card-text display-6"><%= totalMotoristasAtivos || 0 %></p>
              <p class="card-text">Motoristas em atividade</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Lista de Veículos -->
      <div class="mb-4">
        <p>Escolha um veículo para registrar o uso:</p>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Veículo</th>
              <th>Placa</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% veiculos.forEach(veiculo => { %>
              <tr>
                <td><%= veiculo.nome %></td>
                <td><%= veiculo.placa %></td>
                <td>
                  <a href="/usar/<%= veiculo.id %>" class="btn btn-primary">Registrar Uso</a>
                  <a href="/registrar-multa/<%= veiculo.id %>" class="btn btn-danger">Registrar Multas</a>
                  <a href="/editar-veiculo/<%= veiculo.id %>" class="btn btn-warning">Editar</a>
                  <form action="/excluir-veiculo/<%= veiculo.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este veículo?');">Excluir</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
        <div class="d-flex gap-2">
          <a href="/relatorio-uso" class="btn btn-secondary">Ver Relatório de Uso</a>
          <a href="/registrar-veiculo" class="btn btn-success">Registrar Veículo</a>
        </div>
      </div>
    </main>
  </div>
  
  <!-- Bootstrap Bundle com Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Inicializa os tooltips
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
    [...tooltipTriggerList].forEach(el => new bootstrap.Tooltip(el));
  </script>
  <script src="/main.js"></script>

</body>
</html>
