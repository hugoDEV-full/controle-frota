<!DOCTYPE html>
<html lang="pt-br">
<link rel="manifest" href="/manifest.json">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Frota - Dashboard</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Estilos para o layout dashboard */
        body {
            overflow-x: hidden;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }

        .sidebar .nav-link {
            color: #adb5bd;
            transition: background-color 0.2s, color 0.2s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #fff;
            background-color: #495057;
        }

        .stat-card {
            min-height: 120px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Menu Lateral) -->
            <nav class="col-md-2 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right" title="Dashboard">
                            <a class="nav-link active" href="/">
                                <i class="bi bi-speedometer2 me-2"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right"
                            title="Relatório de Uso">
                            <a class="nav-link" href="/relatorio-uso">
                                <i class="bi bi-bar-chart me-2"></i> Relatório de Uso
                            </a>
                        </li>
                        <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="right"
                            title="Relatório de Multas">
                            <a class="nav-link" href="/relatorio-multas">
                                <i class="bi bi-file-earmark-text me-2"></i> Relatório de Multas
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Conteúdo Principal -->
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                
                <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <div>
                        <h1>Controle de Frota</h1>
                        <p>
                            Usuário: <strong>
                                <%= user.email %>
                            </strong> |
                            Permissão: <strong>
                                <%= user.role %>
                            </strong>
                        </p>
                    </div>
                    <div>
                        <a href="/notificacoes" class="btn btn-primary me-2">Notificações</a>
                        <a href="/logout" class="btn btn-primary">Sair</a>
                    </div>
                </div>

                <!-- Cards com estatísticas -->
                <div class="row mb-4">
                    <!-- Card: Total de Veículos -->
                    <div class="col-md-3">
                        <div class="card stat-card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-truck"></i> Veículos</h5>
                                <p class="card-text display-6">
                                    <%= totalVeiculos || 0 %>
                                </p>
                                <p class="card-text">Total de veículos cadastrados</p>
                            </div>
                        </div>
                    </div>
                    <!-- Card: Total de Multas -->
                    <div class="col-md-3">
                        <div class="card stat-card text-white bg-danger mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-exclamation-octagon"></i> Multas</h5>
                                <p class="card-text display-6">
                                    <%= totalMultas || 0 %>
                                </p>
                                <p class="card-text">Multas registradas</p>
                            </div>
                        </div>
                    </div>
                    <!-- Card: Uso de Veículos (Total de Registros de Uso) -->
                    <div class="col-md-3">
                        <div class="card stat-card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-speedometer2"></i> Uso</h5>
                                <p class="card-text display-6">
                                    <%= totalUso || 0 %>
                                </p>
                                <p class="card-text">Registros de uso</p>
                            </div>
                        </div>
                    </div>
                    <!-- Card: Motoristas Ativos -->
                    <div class="col-md-3">
                        <div class="card stat-card text-white bg-warning mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><i class="bi bi-people"></i> Motoristas</h5>
                                <p class="card-text display-6">
                                    <%= totalMotoristasAtivos || 0 %>
                                </p>
                                <p class="card-text">Motoristas em atividade</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Conteúdo: Lista de Veículos -->
                <div class="mb-4">
                    <p>Escolha um veículo para registrar o uso:</p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Veículo</th>
                                <th>Placa</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% veiculos.forEach(veiculo=> { %>
                                <tr>
                                    <td>
                                        <%= veiculo.nome %>
                                    </td>
                                    <td>
                                        <%= veiculo.placa %>
                                    </td>
                                    <td>
                                        <a href="/usar/<%= veiculo.id %>" class="btn btn-primary">Registrar Uso</a>
                                        <a class="btn btn-danger" href="/registrar-multa/<%= veiculo.id %>">
                                            Registrar Multas
                                        </a>
                                        <a href="/editar-veiculo/<%= veiculo.id %>" class="btn btn-warning">Editar</a>
                                        <form action="/excluir-veiculo/<%= veiculo.id %>" method="POST"
                                            style="display:inline;">
                                            <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('Tem certeza que deseja excluir este veículo?');">Excluir</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <div class="d-flex gap-2">
                        <a href="/relatorio-uso" class="btn btn-secondary">Ver Relatório de Uso</a>
                        <a href="/registrar-veiculo" class="btn btn-success">Registrar Veículo</a>
                    </div>
                </div>
            </main>
        </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Inicializa os tooltips
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
    </script>
</body>

</html>